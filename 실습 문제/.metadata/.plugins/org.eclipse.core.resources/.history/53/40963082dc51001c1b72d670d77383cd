class Car{
	String color;
	int speed;
	
	void upSpeed(int value) {
		speed = speed + value;
	}
	
	void downSpeed(int value) {
		speed = speed - value;
	}
}

public class Ex11_01 {

	public static void main(String[] args) {
		
		Car myCar1 = new Car();
		myCar1.color = "빨깡";
		myCar1.speed = 0;
		
		Car myCar2 = new Car();
		myCar2.color = "파랑";
		myCar2.speed = 0;
		
		myCar1.upSpeed(30);
		System.out.println("Car1의 속도는 " + myCar1.speed + "km 입니다.");
		

	}

}
